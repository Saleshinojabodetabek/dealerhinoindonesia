# =====================================
# üîí SECURITY CONFIG FOR SALES HINO SITE (FINAL CLEAN & OPTIMIZED)
# =====================================

# 1Ô∏è‚É£ Nonaktifkan directory listing
Options -Indexes

# 2Ô∏è‚É£ Aktifkan Rewrite Engine dan paksa HTTPS
RewriteEngine On

# Paksa HTTPS kecuali di localhost (untuk pengembangan)
RewriteCond %{HTTP_HOST} !^localhost [NC]
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# 3Ô∏è‚É£ Blokir akses ke file sensitif
<FilesMatch "(^\.|config\.php|koneksi\.php)">
    Require all denied
</FilesMatch>

# Izinkan file login & proses login
<FilesMatch "(cek.*login\.php|proses_login\.php|hapus.*\.php|edit_.*\.php|tambah_.*\.php)">
    Require all granted
</FilesMatch>

# 4Ô∏è‚É£ Cegah eksekusi PHP di folder upload
<DirectoryMatch "(?i)admin/api/uploads">
    <FilesMatch "\.(php|php3|php4|php5|phtml|phps|html|htm)$">
        Require all denied
    </FilesMatch>
</DirectoryMatch>

# 5Ô∏è‚É£ Lindungi file konfigurasi & sistem
<FilesMatch "(composer\.json|composer\.lock|package\.json|yarn\.lock|\.env|\.git|\.htpasswd)">
    Require all denied
</FilesMatch>

# 6Ô∏è‚É£ Cegah file berbahaya di-upload
<FilesMatch "\.(phps|php5|phtml|exe|sh|bat|pl|py|jsp|asp)$">
    Require all denied
</FilesMatch>

# 7Ô∏è‚É£ Lindungi file .htaccess
<Files ".htaccess">
    Require all denied
</Files>

# 8Ô∏è‚É£ Blokir query mencurigakan (LFI, RFI, Command Injection)
RewriteCond %{QUERY_STRING} (\.\./|\.\.\\|/etc/passwd|/bin/bash|base64_encode|eval\(|system\(|shell_exec\() [NC]
RewriteRule .* - [F,L]

# 9Ô∏è‚É£ Blok referer spam & user-agent bot scanner
SetEnvIfNoCase Referer "semalt\.com" bad_ref=1
SetEnvIfNoCase Referer "buttons\-for\-website" bad_ref=1
SetEnvIfNoCase Referer "darodar\.com" bad_ref=1
SetEnvIfNoCase Referer "crawler" bad_ref=1
SetEnvIfNoCase Referer "scan" bad_ref=1
SetEnvIfNoCase User-Agent "curl" bad_bot
SetEnvIfNoCase User-Agent "wget" bad_bot
SetEnvIfNoCase User-Agent "python" bad_bot
SetEnvIfNoCase User-Agent "nikto" bad_bot
SetEnvIfNoCase User-Agent "fimap" bad_bot
SetEnvIfNoCase User-Agent "sqlmap" bad_bot

<RequireAll>
    Require all granted
    Require not env bad_ref
    Require not env bad_bot
</RequireAll>

# üîü Blok IP mencurigakan (bisa ditambah)
<RequireAll>
    Require all granted
    Require not ip 45.146.165.0/24
    Require not ip 185.220.100.0/22
    Require not ip 91.240.118.0/23
</RequireAll>

# 11Ô∏è‚É£ Header keamanan tambahan
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options "nosniff"
    Header always set X-Frame-Options "SAMEORIGIN"
    Header always set X-XSS-Protection "1; mode=block"
    Header always set Referrer-Policy "strict-origin-when-cross-origin"
    Header always set Permissions-Policy "geolocation=(), microphone=(), camera=()"
    Header unset X-Powered-By
</IfModule>

# 13Ô∏è‚É£ Cache control (untuk kecepatan)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
    ExpiresByType text/css "access plus 1 week"
    ExpiresByType application/javascript "access plus 1 week"
    ExpiresDefault "access plus 3 days"
</IfModule>

# 14Ô∏è‚É£ Non-cache untuk file PHP & HTML
<FilesMatch "\.(php|html)$">
    Header set Cache-Control "no-store, no-cache, must-revalidate"
</FilesMatch>

# 15Ô∏è‚É£ Matikan Server Signature
ServerSignature Off

# =============================
# üîí Proteksi robots.txt (opsional)
# =============================
<Files "robots.txt">
    <IfModule mod_setenvif.c>
        SetEnvIfNoCase User-Agent "Googlebot" allowed_bot
        SetEnvIfNoCase User-Agent "Googlebot-Image" allowed_bot
        SetEnvIfNoCase User-Agent "Bingbot" allowed_bot
        SetEnvIfNoCase User-Agent "YandexBot" allowed_bot
        SetEnvIfNoCase User-Agent "DuckDuckBot" allowed_bot
    </IfModule>
    <RequireAll>
        Require env allowed_bot
    </RequireAll>
    ErrorDocument 403 /robots.txt
</Files>

# ============================================
# üö´ BLOKIR LINK MALWARE & REQUEST MENCURIGAKAN
# ============================================

# 1Ô∏è‚É£ Blok URL dengan parameter acak seperti ?w=xxxx
RewriteCond %{QUERY_STRING} (^|&)w=[0-9]+ [NC,OR]
RewriteCond %{THE_REQUEST} \?w=[0-9]+ [NC,OR]
RewriteCond %{REQUEST_URI} ^/index\.php$ [NC]
RewriteRule .* - [F,L]

# 2Ô∏è‚É£ Blok URL dengan ekstensi palsu .shtml di root
RewriteCond %{THE_REQUEST} \.shtml [NC]
RewriteRule .* - [F,L]

# 3Ô∏è‚É£ Blok URL dengan parameter mencurigakan (id random, base64, eval, shell, dll)
RewriteCond %{QUERY_STRING} (base64_encode|eval\(|assert\(|cmd|shell|GLOBALS|\_REQUEST|UNION._SELECT) [NC]
RewriteRule .* - [F,L]

# 4Ô∏è‚É£ Blok URL hasil injeksi /?detail/xxx
RewriteCond %{THE_REQUEST} \?detail/ [NC,OR]
RewriteCond %{QUERY_STRING} detail/ [NC,OR]
RewriteCond %{REQUEST_URI} index\.php\?detail/ [NC,OR]
RewriteCond %{REQUEST_URI} /detail/ [NC]
RewriteRule .* - [F,L]

# 5Ô∏è‚É£ Blok query 1 huruf mencurigakan (?x=123)
RewriteCond %{QUERY_STRING} ^[a-zA-Z]=[0-9]+$ [NC]
RewriteRule .* - [F,L]

# 6Ô∏è‚É£ Tambahan proteksi karakter injeksi
RewriteCond %{THE_REQUEST} "(\;|\||\`|\\|\<|\>)" [NC]
RewriteRule .* - [F,L]

# ============================================
# üåê CLEAN URL TANPA .PHP (FINAL)
# ============================================

# Redirect URL .php ke versi tanpa ekstensi (SEO friendly)
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?] [NC]
RewriteCond %{REQUEST_URI} !^/admin
RewriteRule ^ %1 [R=301,L]

# Buka halaman tanpa .php di frontend
RewriteCond %{REQUEST_URI} !^/admin
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^/]+)/?$ $1.php [L,QSA]

# =====================================
# ‚úÖ END OF SECURITY CONFIG
