# ============================
# HINO DEALER INDONESIA .HTACCESS
# ============================

RewriteEngine On

# --- 1. Paksa HTTPS + non-www (https://dealerhinoindonesia.com) ---
RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.dealerhinoindonesia\.com [NC]
RewriteRule ^(.*)$ https://dealerhinoindonesia.com/$1 [L,R=301]

# --- 2. Jangan rewrite kalau file/folder asli ada ---
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# --- 3. SEO Friendly Produk ---
# Hino 300 Series
# Contoh: https://dealerhinoindonesia.com/hino300/115-sd-std-euro4
RewriteRule ^hino300/([a-z0-9-]+)/?$ product-detail-hino300.php?slug=$1 [L,QSA]

# Hino 500 Series
# Contoh: https://dealerhinoindonesia.com/hino500/fg-260-js-euro4
RewriteRule ^hino500/([a-z0-9-]+)/?$ product-detail-hino500.php?slug=$1 [L,QSA]

# Hino Bus Series
# Contoh: https://dealerhinoindonesia.com/hinobus/115-sdb-std-euro4
RewriteRule ^hinobus/([a-z0-9-]+)/?$ product-detail-hinobus.php?slug=$1 [L,QSA]

# --- 4. SEO Friendly Artikel ---
# Artikel detail
# Contoh: https://dealerhinoindonesia.com/artikel/bus-hino-kembali-dipercaya
RewriteRule ^artikel/([a-z0-9-]+)/?$ artikel-detail.php?slug=$1 [L,QSA]

# Kategori artikel
# Contoh: https://dealerhinoindonesia.com/kategori/promo
RewriteRule ^kategori/([a-z0-9-]+)/?$ artikel.php?kategori=$1 [L,QSA]

# --- 5. Default file index.php ---
DirectoryIndex index.php
